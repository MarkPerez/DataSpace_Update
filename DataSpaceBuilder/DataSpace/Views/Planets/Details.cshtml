@model DataSpace.Models.Planet

@{
    ViewBag.Title = "Details";
}

@if (Model.Picture != null)
{
    if (Model.Name == "Mercury")
    {
        <style>
            body {
                background-image: url('../../Content/images/mercury-153570_1280.png'), url('../../Content/Images/milky-way-1016309_1920.jpg');
